## - Get SO
unameOut="$(uname -s)"
case "${unameOut}" in
  Linux*)   machine=LINUX;;
  Darwin*)  machine=MAC;;
  CYGWIN*)  machine=CYGWIN;;
  MINGW*)   machine=MINGW;;
  *)        machine="UNKNOWN:${unameOut}"
esac

## - Check SO
if ! [[ " ${machine} " =~ "MAC" ]]; then
  export TEXT_EDITOR=vim
  export SHELL_MANAGER=.bashrc
else
  export TEXT_EDITOR=code
  export SHELL_MANAGER=.zshrc
fi

