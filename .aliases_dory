my_title(){
  echo "${RED}## --------------------------------------------------------------------------${SET}\r"
  echo "${RED}## - ${YELLOW}[${1}] ${SET}: ${GREEN}${2}${SET}\r"
  echo "${RED}## --------------------------------------------------------------------------${SET}\r"
}

my_line(){
