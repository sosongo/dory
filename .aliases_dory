  my_line 'sudo chmod -R 777 /mnt'
  my_line 'sudo chown -R www-data:www-data /mnt/'
  my_line 'sudo find /home/www-data -type d -exec chmod u+rwx {} +'
  my_line 'sudo find /home/www-data -type f -exec chmod u+rw {} +'
  "

